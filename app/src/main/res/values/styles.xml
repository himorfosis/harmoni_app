<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    </style>

    <style name="text_title_status" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_description_status" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_description</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="text_title_result" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_description</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="text_btn_white" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_title_hint" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_title_hint</item>
        <!--        <item name="android:fontFamily">@font/regular_opensans</item>-->
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
    </style>

    <style name="text_item_title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="text_feature_title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="text_item_detail" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_detail_title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_detail_description" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_item_title_event" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="text_item_title_about" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_item_location_event" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_green</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="text_item_detail_description" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_description</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>


    <style name="text_item" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="text_item_hint" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/gold</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>


    <style name="EditTextBorderData" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="btn_secondary" parent="android:Widget.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/btn_green</item>
    </style>

    <style name="btn_primary" parent="android:Widget.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_primary</item>
    </style>

    <style name="btn_feature" parent="android:Widget.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/btn_feature</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
