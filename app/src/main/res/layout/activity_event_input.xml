<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".homepage.fragment.auth.Login">

    <include
        layout="@layout/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_100sdp">

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/title_event_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Masukkan Judul..."
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp" />


            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/description_event_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Masukkan Deskrpsi..."
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp" />

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/date_event_tv"
                style="@style/text_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/colorAccent"
                android:layout_marginBottom="@dimen/_10sdp"
                />

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/location_event_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Masukkan Lokasi..."
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp" />

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/phone_event_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Masukkan Nomor Telepon..."
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="@dimen/_10sdp" />

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAllCaps="false" />

            <EditText
                android:id="@+id/email_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:hint="Masukkan Email Anda..."
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="@dimen/_10sdp" />

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gambar Event"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/choose_image_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Klik Disini Untuk Pilih Gambar"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:id="@+id/upload_event_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/ic_broken_image" />

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/send_event_btn"
        style="@style/btn_primary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_10sdp"
        android:text="KIRIM" />

</LinearLayout>