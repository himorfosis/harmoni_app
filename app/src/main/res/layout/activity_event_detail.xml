<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.EventDetail"
    android:orientation="vertical"
    android:background="@android:color/white">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_detail"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <TextView
                android:id="@+id/title_event_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title Event"
                style="@style/text_feature_title"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/image_event_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_broken_image"/>

            <TextView
                android:id="@+id/deskription_event_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Event"
                style="@style/text_item"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_15sdp"/>

            <TextView
                android:id="@+id/date_event_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal :"
                style="@style/text_item"
                android:layout_gravity="left"
                />

            <TextView
                android:id="@+id/location_event_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi :"
                style="@style/text_item"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/_50sdp"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>